    button.mfp-close, button.mfp-arrow{
	height: 60px !important;
  }
  .mfp-arrow-left {
	background: url(data:image/svg+xml;utf8;base64,) no-Repeat top left !important;
	content: "<";
	width: 50px;
	height: 50px;
  }

  .mfp-arrow-right {
	background: url(data:image/svg+xml;utf8;base64,) no-Repeat top right !important;
	width: 50px;
	height: 50px;
  }

  .mfp-arrow-left::before,
  .mfp-arrow-right::before {
	display: none;
	content:''
  }

  .mfp-arrow-left::after,
  .mfp-arrow-right::after {
	display: none;
	content:''
  }
